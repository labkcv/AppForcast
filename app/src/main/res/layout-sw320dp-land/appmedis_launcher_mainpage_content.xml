<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".controller.mainsubapp.medis.MainPage"
    tools:showIn="@layout/appmedis_launcher_mainpage_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_weight="4"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/appmedis_button_acupuncture_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/xml_selector_button_state"
                android:contentDescription="@string/appmedis_button_accupunture_description"
                android:drawableLeft="@drawable/acupuncture_logo_button"
                android:drawableStart="@drawable/acupuncture_logo_button"
                android:gravity="center"
                android:padding="8dp"
                android:scaleType="center"
                android:text="@string/appmedis_button_accupunture_title"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/appmedis_button_stroke_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/xml_selector_button_state"
                android:contentDescription="@string/appmedis_button_stroke_description"
                android:drawableLeft="@drawable/stroke_logo_button"
                android:drawableStart="@drawable/stroke_logo_button"
                android:gravity="center"
                android:padding="8dp"
                android:scaleType="center"
                android:text="@string/appmedis_button_stroke_title"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/appmedis_button_heart_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/xml_selector_button_state"
                android:contentDescription="@string/appmedis_button_heart_description"
                android:drawableLeft="@drawable/heart_logo_button"
                android:drawableStart="@drawable/heart_logo_button"
                android:gravity="center"
                android:padding="8dp"
                android:scaleType="center"
                android:text="@string/appmedis_button_heart_title"
                android:textSize="10sp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:background="@drawable/xml_content_default_shadow_shape"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/appmedis_avatar_description"
            android:src="@drawable/logomedis"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appmedis_short_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"/>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
